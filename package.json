{
  "name": "ensuria",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node ./bin/www",
    "start:dev": "./node_modules/.bin/nodemon ./bin/www.js",
    "test": "npm-run-all --aggregate-output cov:clean -p cov:unit cov:integration -s cov:summary-preset cov:report",
    "test:integration": "export NODE_ENV=testing && NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" npm-run-all cov:clean cov:integration",
    "test:unit": "export NODE_ENV=testing && NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" npm-run-all cov:clean cov:unit",
    "cov:clean": "rimraf .nyc_output && rimraf coverage",
    "cov:unit": "jest --forceExit --colors -c jest.config.unit.cjs",
    "cov:integration": "jest -runInBand --forceExit --colors -c jest.config.integration.cjs",
    "cov:summary-preset": "mkdir .nyc_output && cp coverage/unit/coverage-final.json .nyc_output/unit.json && cp coverage/integration/coverage-final.json .nyc_output/integration.json",
    "cov:report": "nyc report --reporter html --reporter lcov --report-dir ./coverage/summary"
  },
  "dependencies": {
    "@casl/ability": "^5.2.2",
    "@testcontainers/postgresql": "^10.10.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv-flow": "^3.1.0",
    "express": "^4.17.1",
    "express-openid-connect": "^2.4.0",
    "helmet": "^4.6.0",
    "http-errors": "^1.6.3",
    "js-yaml": "^4.1.0",
    "knex": "^3.1.0",
    "lodash": "^4.17.20",
    "morgan": "^1.9.1",
    "nodemon": "^3.1.4",
    "objection": "^3.1.4",
    "openapi-validator-middleware": "^3.0.0",
    "pg": "^8.7.1",
    "swagger-ui-express": "^4.1.3"
  },
  "keywords": [],
  "author": "Oleksandr Shereminskyi",
  "license": "ISC",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "debug": "^4.3.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.0.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "testcontainers": "^10.10.4",
    "supertest": "^7.0.0"
  }
}
